<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <LinearLayout
            android:id="@+id/btnRegistrarEquipo"
            android:layout_width="293dp"
            android:layout_height="129dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/button_registrar_equipo"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.062"
            app:layout_constraintHorizontal_bias="0.507">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/computer"
                android:contentDescription="Buscar equipo"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:text="Registrar Equipo"
                android:textColor="@android:color/black"
                android:paddingStart="25dp"
                android:textSize="34sp" android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btnListaEquipos"
            android:layout_width="293dp"
            android:layout_height="129dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/button_lista_equipos"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.351">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/list"
                android:contentDescription="Lista de Equipos"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:text="Lista de Equipos"
                android:textColor="@android:color/black"
                android:paddingStart="25dp"
                android:textSize="34sp" android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/btnEscanearEquipo"
            android:layout_width="293dp"
            android:layout_height="129dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/button_escanear"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.646">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/barcode"
                android:contentDescription="Escanear Equipos"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:text="Escanear Equipo"
                android:textColor="@android:color/black"
                android:paddingStart="25dp"
                android:textSize="34sp" android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/btnConsultarIncidencia"
            android:layout_width="293dp"
            android:layout_height="129dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/button_crear_incidencia"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.935">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/monitored"
                android:contentDescription="Crear Incidencia"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:text="Consultar Incidencia"
                android:textColor="@android:color/black"
                android:paddingStart="20dp"
                android:textSize="32sp" android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>