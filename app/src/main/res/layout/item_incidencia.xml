<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/rootItemLayout"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="@drawable/containter_localizacion"
              android:layout_marginHorizontal="16dp"
              android:gravity="center_vertical"
              android:minHeight="48dp"
              android:layout_marginTop="4dp">

    >

    <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txtAula"
                android:text="Aula: 101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#000000"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/txtPrioridad"
                android:text="Prioridad: Alta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/txtFecha"
                android:text="Fecha: 2024-12-01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
